abi <abi/3.0>,

include <tunables/global>

@{bitraam_exec_path} = /{usr/,usr/local/,*/*/.local/,}bin/bitraam

profile bitraam @{bitraam_exec_path} {
  include <abstractions/bitraam>

  @{bitraam_exec_path} mr,
  owner @{HOME}/.bitraam/{**,} rw,
  owner @{HOME}/.local/{**,} mrw,

}
